---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GithubIcon from "../components/icons/Github.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import BriefcaseIcon from "../components/icons/Briefcase.astro";
import VSCodeIcon from "../components/icons/VSCode.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Porfolio de zebaxthi - Desarrollador y Programador Backend y Frontend con 3 años de experiencia"
  description="Contrata"
>
  <main class="px-4">
    <SectionContainer id="top" class="py-44 pb-24">
      <img
        class="rounded-full size-12 items-center mb-4"
        src="https://media.licdn.com/dms/image/D4E03AQGxMfO95dxDsw/profile-displayphoto-shrink_400_400/0/1692379111329?e=1715817600&v=beta&t=Hc2cO9H2ZPG1N0HMh4I2Q0PrN4gfDegxXXNqn0sHbb0"
        alt=""
      />
      <h1
        class="text-xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, soy zebathi
        <a
          href="https://www.linkedin.com/in/sebastian-aguirre-gil-a29224240/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        +3 años de experiencia. <span class="text-green-500 font-bold"
          >Desarrollador Backend y Frontend</span
        >. De Colombia, Marinilla. Especializado en desarrollados soluciones que
        sirven para la vida.
      </h2>
      <nav class="flex gap-x-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/sebastian-aguirre-gil-a29224240/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/zebaxthi">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:sebastianaguirregil@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          sebastianaguirregil@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-7" />
        Experiencia
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <VSCodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
